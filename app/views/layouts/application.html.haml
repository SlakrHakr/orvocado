%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title orvacado
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    = render partial: '/layouts/banner'

    - if notice.present?
      %p.notice= notice
    - if alert.present?
      %p.alert= alert

    = yield
