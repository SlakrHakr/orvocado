%div.align-left.orvacado-placement
  = image_tag('orvacado.png', height: '50%')
%div.align-left.form-section
  %h2

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .field.pad-field
      = f.text_field :username, placeholder: 'Username', autofocus: true, class: 'style-field'

    .field.pad-field
      = f.email_field :email, placeholder: 'Email', class: 'style-field'

    .field.pad-field
      = f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'style-field'

    .field.pad-field
      = f.password_field :password_confirmation, placeholder: 'Password, again...', autocomplete: "off", class: 'style-field'

    .actions
      = f.submit "Sign up", class: 'style-submit'

  = render "devise/shared/links"
