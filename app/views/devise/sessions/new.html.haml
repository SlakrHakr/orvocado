%div.align-left.orvacado-placement
  = image_tag('orvacado.png', height: '375px')
%div.align-left.form-section
  %h2

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

    .field.pad-field
      = f.email_field :email, placeholder: 'Email', autofocus: true, class: 'style-field'

    .field.pad-field
      = f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'style-field'

    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me

    .actions
      = f.submit "Log in", class: 'style-submit'

  = render "devise/shared/links"
