-# reason

.reason
  .meta
    = reason.user.nil? ? nil : reason.user.username

  .reason-description
    = reason.description
    =# reason.description.gsub("\n", '<br/>').gsub(' ', '&nbsp;').html_safe

  - if reason.position.selected?
    .links
      %a.agree-link{ 'data-reason-id' => reason.id, style: 'color: gray;' }= reason.agree? ? 'Nevermind' : 'Agree'
